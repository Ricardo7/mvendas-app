<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_line_view"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/linha_lista_pedidos_cnpj_raz_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="@dimen/textTextLinhaCabecalho"
        android:textColor="@color/linhaViewText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textTextLinhaCorpo">

        <TextView
            android:id="@+id/linha_lista_pedidos_num_pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/linhaViewText"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/linha_lista_pedidos_data_pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/linhaViewText"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/linha_lista_pedidos_ic_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_pedido_aberto"/>

            <ImageView
                android:id="@+id/linha_lista_pedidos_ic_situacao"
                android:layout_width="wrap_content"
                android:background="@drawable/ic_pedido_pendente"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>